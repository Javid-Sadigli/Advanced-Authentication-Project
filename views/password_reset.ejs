<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/password_reset.css">
</head>
<body>
    <main>
        <div class="main-div">
            <h2 class="password-reset-h2">
                Set your new password
            </h2>
            <% if (error_message) { %>
                <p class="error-message"><%= error_message %></p>
            <% } %>
            <p class="password-reset-p">
                Dear user. Please set your new password. 
            </p>
            
            <form action="/password_reset" method="post" class="password-reset-form-2">
                <input type="hidden" name="_csrf" value="<%= csrf_token %>">
                <input type="hidden" name="user_id" value="<%= user_id %>">
                <input type="password" name="password" placeholder="Password" autocomplete="off">
                <input type="password" name="confirm_password" placeholder="Confirm password" autocomplete="off">
                <button type="submit">Reset your password</button>
            </form>
        </div>
    </main>
</body>
</html>